<% include components/_studentInfo %>

<h2 class="text-center title">入學資料</h2>

<hr>

<dl class="row">
	<dt class="col-md-3">
		小學
	</dt>
	<dd class="col-md-9">
		<div class="row">
			<div class="col-md-4">
				<div class="form-group">
					<label class="text-danger" for="primarySchoolName">學校名稱</label>
					<input type="text" class="form-control" id="primarySchoolName" placeholder="">
				</div>
			</div>
			<div class="col-md-4">
				<div class="form-group">
					<label class="text-danger" for="primarySchoolAdmissionsAt">入學時間</label>
					<input class="form-control input-datepicker" data-provide="datepicker" data-date-format="yyyy/mm" data-date-min-view-mode="months" id="primarySchoolAdmissionsAt">
				</div>
			</div>
			<div class="col-md-4">
				<div class="form-group">
					<label class="text-danger" for="primarySchoolGraduatedAt">畢業時間</label>
					<input class="form-control input-datepicker" data-provide="datepicker" data-date-format="yyyy/mm" data-date-min-view-mode="months" id="primarySchoolGraduatedAt">
				</div>
			</div>
		</div>
	</dd>
</dl>

<hr>

<dl class="row">
	<dt class="col-md-3">
		中學 1 - 3 年級
	</dt>
	<dd class="col-md-9">
		<div class="row">
			<div class="col-md-4">
				<div class="form-group">
					<label class="text-danger" for="highSchool1to3Name">學校名稱</label>
