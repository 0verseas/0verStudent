<div class="title">
    <h2>錄取結果查詢</h2>
</div>
<div id="form-studentInfo">
    <form class="">
        <!--分發類別-->
        <div class="form-group form-inline">
            <label for="stage" class="control-label"><i class="fa fa-cubes fa-fw" aria-hidden="true"></i>分發類別</label>
            <div class="col-2">
                <select id="stage" class="form-control">
                    <option value="">--請選擇--</option>
                    <option value="0">個人申請</option>
                    <option value="R">研究所</option>
                    <option value="1">第一梯次</option>
                    <option value="2">第二梯次</option>
                    <option value="3">第三梯次</option>
                    <option value="4">第四梯次</option>
                    <option value="T">二年制學士班</option>
                    <option value="5">第五梯次（含香港自願免試申請僑先部）</option>
                </select>
            </div>
        </div>
        <!--姓名-->
        <div class="form-group form-inline">
            <label for="" class="control-label"><i class="fa fa-address-card-o fa-fw" aria-hidden="true"></i>姓名：</label>
            <div class="col-2">
                <input type="text" class="form-control" id="name" placeholder="請輸入正體中文或英文姓名全名">
            </div>
        </div>
        <!--生日-->
        <div class="form-group form-inline">
            <label for="" class="control-label"><i class="fa fa-birthday-cake fa-fw" aria-hidden="true"></i>生日：</label>
            <div class="col-2">
                <input type="date" class="form-control" id="birthday">
            </div>
        </div>
        <!--性別-->
        <div class="form-group form-inline">
            <label><i class="fa fa-genderless fa-fw" aria-hidden="true"></i>性別：</label>
            <div class="col-6 form-group">
                <div class="form-check form-check-inline">
                    <label class="form-check-label">
                        <input class="form-check-input" type="radio" name="gender" value="F"> 女<i class="fa fa-venus" aria-hidden="true"></i>
                    </label>
                </div>
                <div class="form-check form-check-inline">
                    <label class="form-check-label">
                        <input class="form-check-input" type="radio" name="gender" value="M"> 男<i class="fa fa-mars" aria-hidden="true"></i>
                    </label>
                </div>
            </div>
        </div>
    </form>
    <div class="row">
        <div class="col-12 text-center" style="padding-top: 20px">
            <button class="btn btn-info" id="btn-search">
                <i class="fa fa-search" aria-hidden="true"></i> 查詢
            </button>
        </div>
    </div>
</div>

<!--查詢結果-->
<div id="form-result" class="hide">
    <hr />
    <div class="title">
        <h3>查詢結果</h3>
    </div>
    <!--金榜題名-->
    <div id="accepted" class="hide">
        <table class="table">
            <tr>
                <th>報名序號</th>
                <th>僑生編號</th>
                <th>中、英文姓名</th>
                <th>錄取系所</th>
                <th>僑居地國別</th>
                <th>發文日期</th>
                <th>發文字號</th>
            </tr>
            <tr id="admission-roster" class="table-warning">  <!--給個金榜題名的感覺-->
                <!--學生榜單資訊-->
            </tr>
        </table>
    </div>
    <!--查無結果-->
    <div id="no-result" class="alert alert-secondary mt-2 hide" role="alert">
        查無結果，可能未獲錄取或輸入的資料有誤
    </div>
</div>
