<% include components/_studentInfo %>

<h2 class="text-center title">上傳系所備審資料</h2>

<hr>

<div id="wrap-wishList">
	<div class="row">
		<div class="col-12">
			<table class="table table-hover">
				<thead>
					<tr>
						<th>志願序</th>
						<th>志願代碼</th>
						<th>學系名稱</th>
						<th></th>
					</tr>
				</thead>
				<tbody id="wishList">
				</tbody>
			</table>
		</div>
	</div>
	<hr>
	<div class="row">
		<div class="col-12 text-center">
			<button class="btn btn-danger" onclick="return confirm('確認後就無法再次更改資料，確認送出嗎？');" disabled>確認資料</button>
		</div>
	</div>
</div>

<div id="form-upload" style="display: none;">
	<dl class="row">
		<dt class="col-4 col-md-2">
			志願代碼
		</dt>
		<dd id="ModalDeptId" class="col-8 col-md-10">
			asd
		</dd>
		<dt class="col-4 col-md-2">
			學校名稱
		</dt>
		<dd id="ModalSchool" class="col-8 col-md-10">
			asd
		</dd>
		<dt class="col-4 col-md-2">
			系所名稱
		</dt>
		<dd id="ModalDeptName" class="col-8 col-md-10">
			asd
		</dd>
	</dl>

	<div class="row">
		<div class="col-12">
			<div class="card">
				<div class="card-header bg-primary text-white">
					自傳
					<span class="badge badge-danger">必填</span>
					<span class="badge badge-warning">選填</span>
				</div>
				<div class="card-block">
					<blockquote class="blockquote">
						最高學歷畢業證書/修業證明/離校證明/在學證明
					</blockquote>

					<div class="row" style="margin-bottom: 15px;">
						<div class="col-12">
							<input id="file-certificate" type="file" class="filestyle" multiple>
						</div>
					</div>

					<div class="card">
						<div class="card-block">
							<h4 class="card-title"><span>已上傳檔案</span> <small class="text-muted">(點圖可放大或刪除)</small></h4>
							<div id="certificateImgArea">
								<img class="img-thumbnail" src="http://via.placeholder.com/970x1100" data-toggle="modal" data-target=".img-modal">
							</div>
						</div>
					</div>

				</div>
			</div>
		</div>
	</div>

	<hr>

	<div class="row">
		<div class="col-12 text-center">
			<button class="btn btn-primary" id="btn-save">
				<i class="fa fa-floppy-o" aria-hidden="true"></i> 儲存
			</button>
			<button class="btn btn-danger" id="btn-exit">
				<i class="fa fa-times-circle" aria-hidden="true"></i> 不儲存離開
			</button>
		</div>
	</div>
</div>

<div class="modal fade img-modal" tabindex="-1" role="dialog" aria-labelledby="imgModal" aria-hidden="true">
	<div class="modal-dialog modal-lg">
		<div class="modal-content">
			<div class="modal-body text-center">
				<img src="http://via.placeholder.com/970x1100" class="img-fluid rounded">
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-danger" onclick="return confirm('確定刪除嗎？')"><i class="fa fa-trash" aria-hidden="true"></i> Delete</button>
				<button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fa fa-sign-out" aria-hidden="true"></i> Exit</button>
			</div>
		</div>
	</div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-filestyle/1.3.0/bootstrap-filestyle.min.js"> </script>
<!-- Doc: http://markusslima.github.io/bootstrap-filestyle/ -->
